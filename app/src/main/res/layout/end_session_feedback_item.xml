<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="dont need"
            android:fontFamily="@font/poppins_semibold"
            android:textAppearance="@style/please_rate_q"
            android:lineSpacingExtra="2sp"
            android:translationY="-0.75sp"
            android:gravity="top" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rec_item"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:clipToPadding="false"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            />
        <RelativeLayout
            android:id="@+id/mid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_low_stsr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Low"
                android:layout_alignParentStart="true"
                app:fontFamily="@font/poppins_semibold"
                android:textSize="@dimen/_8sdp"
                android:textColor="@color/blue_intro_color" />

            <TextView
                android:id="@+id/tv_high_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="High"
                app:fontFamily="@font/poppins_semibold"
                android:textSize="@dimen/_8sdp"
                android:textColor="@color/blue_intro_color" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@color/purple_700">

        </View>



    </LinearLayout>

</RelativeLayout>
