<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        app:cardBackgroundColor="@color/blue_intro_color"
        app:cardCornerRadius="@dimen/_7sdp"
        app:cardElevation="@dimen/_1sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/rIV_myBlog"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_160sdp"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY"
                android:src="@drawable/academy_bg_avatar">

            </com.makeramen.roundedimageview.RoundedImageView>

            <TextView
                android:id="@+id/indian_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rIV_myBlog"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:fontFamily="@font/poppins_regular"
                android:background="@drawable/transparent_retangle_shape_with_corner"
                android:gravity="center"
                android:text="New Delhi"
                android:textAppearance="@style/indian_team" />

            <TextView
                android:id="@+id/rajat_patid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/indian_team"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/opensans_bold"
                android:layout_marginEnd="@dimen/_10sdp"
                android:text="XYZ Cricket Academy"
                android:textAppearance="@style/rajat_patid" />

            <TextView
                android:id="@+id/another_pro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rajat_patid"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:fontFamily="@font/opensans_semibold"
                android:text="Batting, Bowling, Lorem Ipsum"
                android:textAppearance="@style/another_pro" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_below="@+id/another_pro"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_12sdp">

                <TextView
                    android:id="@+id/by_kannan_n"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:gravity="bottom"
                    android:fontFamily="@font/opensans_regular"
                    android:text="View More Details"
                    android:textAppearance="@style/by_kannan_n" />

                <FrameLayout
                    android:id="@+id/fl_register"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_height="@dimen/_28sdp"
                    android:layout_centerHorizontal="true">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_bg_top" />

                    <ImageView
                        android:id="@+id/vector1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_17sdp"
                        android:src="@drawable/button_bg_bottom" />

                    <ImageView
                        android:id="@+id/vector"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:background="@drawable/button_bg"
                        android:visibility="visible" />


                    <TextView
                        android:id="@+id/get_started"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:fontFamily="@font/opensans_semibold"
                        android:lineHeight="@dimen/_27sdp"
                        android:text="@string/book_now"
                        android:textAppearance="@style/register" />

                </FrameLayout>

            </RelativeLayout>


        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>