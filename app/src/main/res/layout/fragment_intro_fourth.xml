<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_intro"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_212sdp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/_61sdp"
        android:layout_marginTop="@dimen/_95sdp"
        android:src="@drawable/intor4" />

    <FrameLayout
        android:id="@+id/fl_get_started"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_below="@+id/img_intro"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_94sdp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button_bg_top" />

        <ImageView
            android:id="@+id/vector1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_17sdp"
            android:src="@drawable/button_bg_bottom" />

        <ImageView
            android:id="@+id/vector"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:visibility="visible"
            android:background="@drawable/button_bg" />



        <TextView
            android:id="@+id/get_started"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:lineHeight="@dimen/_27sdp"
            android:layout_gravity="center"
            android:fontFamily="@font/opensans_semibold"
            android:text="@string/get_started"
            android:textAppearance="@style/get_started" />

    </FrameLayout>

</RelativeLayout>