<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        app:cardBackgroundColor="@color/blue_intro_color"
        app:cardCornerRadius="@dimen/_7sdp"
        app:cardElevation="@dimen/_1sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/rIV_myBlog"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_160sdp"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY"
                android:src="@drawable/myblogimage">

            </com.makeramen.roundedimageview.RoundedImageView>

            <TextView
                android:id="@+id/indian_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rIV_myBlog"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:fontFamily="@font/poppins_regular"
                android:background="@drawable/transparent_retangle_shape_with_corner"
                android:gravity="center"
                android:text="Indian Team"
                android:textAppearance="@style/indian_team" />

            <TextView
                android:id="@+id/rajat_patid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/indian_team"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/opensans_bold"
                android:layout_marginEnd="@dimen/_10sdp"
                android:text="Rajat Patidar - A star on the rise?"
                android:textAppearance="@style/rajat_patid" />

            <TextView
                android:id="@+id/another_pro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rajat_patid"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:fontFamily="@font/opensans_semibold"
                android:text="Another product from IPL manufacturing unit"
                android:textAppearance="@style/another_pro" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/another_pro"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_12sdp">

                <TextView
                    android:id="@+id/by_kannan_n"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:gravity="top"
                    android:fontFamily="@font/opensans_regular"
                    android:text="By Kannan Nair"
                    android:textAppearance="@style/by_kannan_n" />

                <TextView
                    android:id="@+id/june_30_202"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/opensans_regular"
                    android:text="June 30, 2022"
                    android:textAppearance="@style/june_30_202"
                    />

            </RelativeLayout>
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>